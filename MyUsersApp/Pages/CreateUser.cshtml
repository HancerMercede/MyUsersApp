@page
@model MyUsersApp.Pages.CreateUserModel

@{
    ViewData["Title"] = "CreateUser";
}

<h1>Create new user</h1>

<h4>input your information.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserDto.Name" class="control-label"></label>
                <input asp-for="UserDto.Name" class="form-control" />
                <span asp-validation-for="UserDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDto.Email" class="control-label"></label>
                <input asp-for="UserDto.Email" class="form-control" />
                <span asp-validation-for="UserDto.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDto.Phone" class="control-label"></label>
                <input asp-for="UserDto.Phone" class="form-control" />
                <span asp-validation-for="UserDto.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDto.Message" class="control-label" typeof="text"></label>
                <input asp-for="UserDto.Message" class="form-control" type="text" />
                <span asp-validation-for="UserDto.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
